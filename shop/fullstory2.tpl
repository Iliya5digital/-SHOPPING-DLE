<div class="post-page">
 
<div class="post-image">
<img src="{image-1}" alt="{title}">
</div>
 
<div class="post-name post-page-name">{title}</div>
<div class="post-details">
Опубликовал: [profile]{login}[/profile] <span>/</span> {date} <span>/</span> Категория: {link-category}
</div>

<div class="post-brief fullstory">{full-story}</div>
    
<div>
<script src="https://yastatic.net/share2/share.js"></script>
<div class="ya-share2" data-curtain data-services="vkontakte,facebook,odnoklassniki,telegram,twitter"></div>
</div>
    
<h3 class="gp-title-1">Другие статьи</h3>
<div class="gcarouselwrap">
<span class="gcarouselarrow prev"><i class="las la-angle-left"></i></span>
<span class="gcarouselarrow next"><i class="las la-angle-right"></i></span>
<div class="gcarouselbody"><div class="gcarousel"><div class="blog-list">
{custom category="{category-id}" template="modules/custom4" aviable="global" from="0" limit="6" order="date"}
</div></div></div></div>
    
<h3 class="gp-title-1" id="gp-rev-anchor">Комментарии ({comments-num})</h3>
<div class="gp-rev-head">
<a href="javascript:void(0)" class="gp-show-rev-form button huge color2"><span class="lar la-comment-dots"></span> Написать отзыв</a>
</div>
<div class="gp-rev-form">{addcomments}</div>
<div id="allEntries">{comments}</div>
    
</div>