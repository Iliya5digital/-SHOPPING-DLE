[category=9]
<div class="list-item">
<div class="g-body">
<div class="g-image">
<a href="{full-link}" class="g-image-link" title="Перейти на страницу товара">
[xfvalue_gallery image="1"]
<div class="g-image-2">[xfvalue_gallery image="2"]</div>
</a>
<span class="g-new" title="Новинка" data-date="{date=d.m.Y}">NEW</span>
[sale]<span class="g-sale" title="Скидка">-{sale}%</span>[/sale]
</div>
<div class="g-info">
<a class="g-name" href="{full-link}">{title}</a>
<div class="g-rate-comm">
<div class="g-rate">{rating}</div>
<a class="g-comm" href="{full-link}#comments">{comments-num} отзыва</a>
</div>
<div class="g-brief">{short-story limit="140"}</div>
<div class="g-price">
[not-sale]<span>{price} {currency}</span>[/not-sale]
[sale]<span>{price-sale} {currency}</span>  <s><span class="top_sold-good-101-oldprice">{price} {currency}</span></s>[/sale]
</div>
<div class="g-buttons">
{add-cart}
[add-favorites]<div class="wish wadd" title="Добавить в список желаний"></div>[/add-favorites]
[del-favorites]<div class="wish wadd" title="Убрать из списка желаний"></div>[/del-favorites]
</div>
</div></div></div>
[/category]

[category=1]<div class="post-wrap col3">
<div class="post">
<div class="post-image"><img src="{image-1}" style="object-fit:cover;width:100%;height:180px" alt="{title}"></div>
<div class="post-text">
<div class="post-name"><a href="{full-link}">{title}</a></div>
<div class="post-details">Опубликовал: [profile]{login}[/profile] <span>/</span> {date=d.m.Y}</div>
<div class="post-brief" style="overflow:hidden;display:-webkit-box;-webkit-line-clamp:3;-webkit-box-orient:vertical;">{short-story limit="100"}</div>
<a href="{full-link}" class="button medium color2">Читать <i class="las la-arrow-right"></i></a>
</div></div></div>
[/category]